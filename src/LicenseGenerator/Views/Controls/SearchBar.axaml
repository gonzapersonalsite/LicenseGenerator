<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="60"
             x:Class="LicenseGenerator.Views.Controls.SearchBar"
             x:Name="Root">
  <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
          Padding="10" CornerRadius="8">
    <Grid ColumnDefinitions="Auto, *">
      <PathIcon Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" 
                Width="16" Height="16" Margin="0,0,10,0" Opacity="0.5"/>
      <TextBox Grid.Column="1" 
               Text="{Binding SearchText, ElementName=Root, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
               Watermark="{Binding Watermark, ElementName=Root}" 
               Background="Transparent" 
               BorderThickness="0"
               VerticalAlignment="Center">
          <TextBox.KeyBindings>
              <KeyBinding Gesture="Enter" Command="{Binding SearchCommand, ElementName=Root}"/>
          </TextBox.KeyBindings>
      </TextBox>
    </Grid>
  </Border>
</UserControl>